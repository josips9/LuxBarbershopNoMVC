<MainWid>
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<StartWid>
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.3, 0.3, 0.9
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint_y: .45
    Button:
        text: 'Kreiranje / ulazak u bazu'
        size_hint_y: .1
        on_press: root.create_database()
    BoxLayout:
        size_hint_y: .45


<DatabaseWid>
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .3, .3, .9
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        size: self.size
        GridLayout:
            id: container
            padding: [10,10,10,10]
            spacing: 5
            size_hint_y: None
            cols: 1

            row_default_height: root.height * 0.2
            height: self.minimum_height

<NewDataButton>
    text: "+"
    on_press: root.create_new_product()

<LeftLabel@Label>
    text_size: self.size
    halign: 'left'
<InsertDataWid>
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .3, .3, .9
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel:
        text: 'Ime'
    TextInput:
        id: ti_ime
        hint_text: 'Unesite ime'
    LeftLabel:
        text: 'Prezime'
    TextInput:
        id: ti_prezime
        hint_text: 'Unesite prezime'
    LeftLabel:
        text: 'Cijena usluge'
    TextInput:
        id: ti_cijena
        hint_text: 'Unesite cijenu (broj) usluge'
    LeftLabel:
        text: 'Usluga'
    TextInput:
        id: ti_usluga
        hint_text: 'Unesite uslugu'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 5
    BoxLayout:
        Button:
            text: 'Create'
            on_press: root.insert_data()
        Button:
            text: 'Exit'
            on_press: root.back_to_database()
<DataWid>
    data: ''
    data_id: ''
    canvas:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint_x: 0.8
        text: root.data
    Button:
        size_hint_x: 0.2
        text: 'Edit'
        on_press: root.update_data(root.data_id)

<UpdateDataWid>
    orientation: 'vertical'
    data_id: ''
    canvas:
        Color:
            rgb: .3, .3, .9
        Rectangle:
            pos: self.pos
            size: self.size
    LeftLabel:
        text: 'ID: ' + root.data_id
    LeftLabel:
        text: 'Ime'
    TextInput:
        id: ti_ime
        hint_text: 'Unesite ime'
    LeftLabel:
        text: 'Prezime'
    TextInput:
        id: ti_prezime
        hint_text: 'Unesite prezime'
    LeftLabel:
        text: 'Cijena usluge'
    TextInput:
        id: ti_cijena
        hint_text: 'Unesite cijenu (broj) usluge'
    LeftLabel:
        text: 'Usluga'
    TextInput:
        id: ti_usluga
        hint_text: 'Unesite uslugu'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 5
    BoxLayout:
        Button:
            text: "Update"
            on_press: root.update_data()
        Button:
            text: 'Delete'
            on_press: root.delete_data()
    BoxLayout:
        Button:
            text: 'Exit'
            on_press: root.back_to_database()
